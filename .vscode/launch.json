{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tarot (dev)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_dev.dart",
            "args": [
                "--flavor",
                "dev",
                "--dart-define-from-file",
                ".env.dev"
            ]
        },
        {
            "name": "Tarot (dev version in release mode)",
            "request": "launch",
            "flutterMode": "release",
            "type": "dart",
            "program": "lib/main_dev.dart",
            "args": [
                "--flavor",
                "dev",
                "--dart-define-from-file",
                ".env.prod"
            ]
        },
        {
            "name": "Tarot (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "program": "lib/main_dev.dart",
            "args": [
                "--flavor",
                "dev",
                "--dart-define-from-file",
                ".env.dev"
            ]
        },
        {
            "name": "Tarot (prod version with debugging)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_prod.dart",
            "args": [
                "--flavor",
                "prod",
                "--dart-define-from-file",
                ".env.prod"
            ]
        },
        {
            "name": "Tarot (prod release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "lib/main_prod.dart",
            "args": [
                "--flavor",
                "prod",
                "--dart-define-from-file",
                ".env.prod"
            ]
        },
        {
            "name": "Golden",
            "request": "launch",
            "type": "dart",
            "codeLens": {
                "for": [
                    "run-test",
                    "run-test-file"
                ]
            },
            "args": [
                "--update-goldens",
                "--dart-define-from-file",
                ".env"
            ]
        }
    ]
}